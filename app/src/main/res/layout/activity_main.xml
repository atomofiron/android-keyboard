<?xml version="1.0" encoding="utf-8"?>
<demo.atomofiron.keyboard.TouchConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:clipToPadding="false"
    tools:context=".MainActivity"
    >
    <ImageView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_gravity="end"
        android:padding="8dp"
        android:src="@drawable/ic_mode_night"
        android:background="@drawable/rounded"
        android:backgroundTint="?colorSurface"
        app:tint="?colorControlNormal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_ui"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        >
        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curtain"
            android:layout_marginTop="-16dp"
            android:elevation="@dimen/elevation"
            android:paddingBottom="64dp"
            app:layout_constraintTop_toTopOf="@+id/search_field"
            >
            <LinearLayout
                android:id="@+id/header_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/common"
                    android:paddingHorizontal="@dimen/half"
                    android:clipToPadding="false"
                    />
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    >
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/categories_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:text="Категории"
                        style="?attr/materialButtonOutlinedStyle"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/history_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:text="История"
                        style="?attr/materialButtonOutlinedStyle"
                        />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_field"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded"
            android:paddingHorizontal="16dp"
            android:singleLine="true"
            android:elevation="@dimen/elevation"
            android:imeOptions="actionDone"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="16dp"
            android:src="@drawable/ic_search"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:elevation="@dimen/elevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <HorizontalScrollView
            android:id="@+id/buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/suggests_offset"
            android:scrollbars="none"
            android:elevation="@dimen/elevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/search_field"
            >
            <LinearLayout
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/bookmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_bookmarks"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:background="@drawable/rounded"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Где поесть"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_circle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Продукты"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_circle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Аптеки"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_circle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Салоны красоты"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:drawableStart="@drawable/ic_circle"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/main"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</demo.atomofiron.keyboard.TouchConstraintLayout>